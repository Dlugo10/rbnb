<h1 class="border-bottom">Reservations</h1>

<ul class='reservation-list'>
  
  <% @reservations.each do |reservation|%>
    <li>
      <h3>Price: <%= reservation.price %> $</h3>
    </li>
    <li>
      <h3>Start Date: <%= reservation.start_date %> </h3>
    </li>
    <li>
      <h3>End Date: <%= reservation.end_date %> </h3>
    </li>
      <li><%= link_to "Update Reservation", edit_flat_reservation_path(reservation.flat, reservation), class: "btn btn-primary" %> 
    </li>
  <% end %>
</ul> 
<%= link_to "Home Page", root_path, class: "btn btn-success" %> 
 
